@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

body
  font-family

.container
  width 960px

.navbar :focus
  outline none

.nav img
  padding-top 8px

#foodGroups .table-head
  height 30px
  font-size 14px
  font-weight bold
  border-bottom 1px solid black

#map
  margin-left 50px
  width 680px
  height 480px
  background-color: #ccc

#neighborhoods ul
  padding-top 40px

#neighborhoods li
  font-weight bold

#neighborhoods li, .place-list li
  margin-bottom 25px
  cursor pointer

#neighborhoods, #map
  float left

#formContainer
  padding 30px

#mapImg
  width:380px
  height: 240px
  background-color: #afafaf
  margin-bottom 20px

#recentLocations li
  float left
  list-style none

form label
  width 120px

form input, form textarea
  width 300px
  height 24px
  // margin-bottom 20px

form textarea
  height 120px

form input[type="submit"]
  width 120px
  height 36px

p.error
  padding 8px 16px
  background-color #ffa0a0
  text-align center
  margin-top 15px
  width 60%

